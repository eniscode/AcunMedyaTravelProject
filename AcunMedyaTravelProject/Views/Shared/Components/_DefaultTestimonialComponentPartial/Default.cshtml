@model List<Testimonial>

<div class="container-fluid testimonial py-5">
    <div class="container py-5">
        <div class="mx-auto text-center mb-5" style="max-width: 900px;">
            <h5 class="section-title px-3">Yorumlar</h5>
            <h1 class="mb-0">Müşterilerimiz Şöyle Diyor!!!</h1>
        </div>
        <div class="testimonial-carousel owl-carousel">
            @foreach (var testimonial in Model)
            {
                <div class="testimonial-item text-center rounded pb-4">
                    <div class="testimonial-comment bg-light rounded p-4">
                        <p class="text-center mb-5">
                            @testimonial.Content
                        </p>
                    </div>
                    <div class="testimonial-img p-1">
                        <img src="@testimonial.ImageUrl" class="img-fluid rounded-circle" alt="Image" style="width: 100px; height: 100px; object-fit: cover;">
                    </div>
                    >

                    <div style="margin-top: -35px;">
                        <h5 class="mb-0">@testimonial.Name</h5>
                        <p class="mb-0">@testimonial.Nation</p>
                        <div class="d-flex justify-content-center">
                            @for (int i = 0; i < testimonial.Rate; i++)
                            {
                                <i class="fas fa-star text-primary"></i>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
