@model AcunMedyaTravelProject.Entities.Admin

@{
    ViewData["Title"] = "Kullanıcıyı Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 class="mb-4">Kullanıcıyı Düzenle</h1>

<form asp-action="Edit" asp-controller="Account" asp-area="Admin" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="form-group mb-3">
        <label for="UserName" class="form-label">Kullanıcı Adı</label>
        <input type="text" asp-for="UserName" class="form-control" placeholder="Kullanıcı adını giriniz" required />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label for="Password" class="form-label">Şifre</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Şifreyi giriniz" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a href="/Admin/Account/Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</form>

<script>
    // Bootstrap 5 için istemci tarafı doğrulama
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

