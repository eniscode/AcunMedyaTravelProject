@model List<AcunMedyaTravelProject.Entities.Destination>

@{
    ViewData["Title"] = "Şehir Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 class="mb-4">Şehir Listesi</h1>

<div class="row">
    @foreach (var destination in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Şehir: @destination.CityName</h5>
                    <p class="card-text"><strong>Kapak Görseli:</strong> <img src="@destination.CoverImageUrl" alt="Kapak Görseli" style="width: 100%; height: auto;" /></p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary btn-sm" href="/Admin/Destination/Edit/@destination.Id">Düzenle</a>
                        <form method="post" action="/Admin/Destination/Delete" style="display:inline;">
                            <input type="hidden" name="id" value="@destination.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a class="btn btn-success" href="/Admin/Destination/Create">Yeni Destinasyon Ekle</a>

                        