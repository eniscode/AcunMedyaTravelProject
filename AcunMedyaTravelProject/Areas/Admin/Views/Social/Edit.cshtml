@model AcunMedyaTravelProject.Entities.SocialMedia

@{
    ViewData["Title"] = "Sosyal Medyayı Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Sosyal Medyayı Düzenle</h1>

<form asp-action="Edit" asp-controller="SocialMedia" asp-area="Admin" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Icon">İkon</label>
        <input type="text" asp-for="Icon" class="form-control" required />
        <span asp-validation-for="Icon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Url">URL</label>
        <input type="text" asp-for="Url" class="form-control" required />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="GuideId">Rehber</label>
        <select asp-for="GuideId" class="form-control" asp-items="ViewBag.Guides"></select>
        <span asp-validation-for="GuideId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="/Admin/SocialMedia/Index" class="btn btn-secondary">Geri Dön</a>
</form>
