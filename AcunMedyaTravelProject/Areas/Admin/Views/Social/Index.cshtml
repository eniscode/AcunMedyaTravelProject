@model List<AcunMedyaTravelProject.Entities.SocialMedia>

@{
    ViewData["Title"] = "Sosyal Medya Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 class="mb-4">Sosyal Medya Listesi</h1>

<div class="row">
    @foreach (var socialMedia in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Rehber: @socialMedia.Guide.Name</h5>
                    <p><strong>İkon:</strong> @socialMedia.Icon</p>
                    <p><strong>URL:</strong> <a href="@socialMedia.Url" target="_blank">@socialMedia.Url</a></p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary btn-sm" href="/Admin/SocialMedia/Edit/@socialMedia.Id">Düzenle</a>
                        <form method="post" action="/Admin/SocialMedia/Delete" style="display:inline;">
                            <input type="hidden" name="id" value="@socialMedia.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a class="btn btn-success" href="/Admin/SocialMedia/Create">Yeni Sosyal Medya Ekle</a>
