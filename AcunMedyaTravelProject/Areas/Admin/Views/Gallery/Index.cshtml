@model List<AcunMedyaTravelProject.Entities.Destination>

@{
    ViewData["Title"] = "Şehir Galerisi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 class="mb-4">Şehir Galerisi</h1>

<div class="row">
    @foreach (var destination in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@destination.CoverImageUrl" class="card-img-top" alt="@destination.CityName" style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@destination.CityName</h5>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary btn-sm" href="#">Düzenle</a>
                        <button class="btn btn-danger btn-sm" onclick="alert('Silme işlemi şu anda desteklenmiyor!')">Sil</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
