@model List<AcunMedyaTravelProject.Entities.Country>

@{
    ViewData["Title"] = "Ülke Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 class="mb-4">Ülke Listesi</h1>

<div class="row">
    @foreach (var country in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Ülke: @country.Name</h5>
                    <p class="card-text">
                        <strong>Kapak Görseli:</strong>
                        <img src="@country.ImageUrl" alt="@country.Name" style="width: 100%; height: auto;" />
                    </p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary btn-sm" href="/Admin/Country/Edit/@country.Id">Düzenle</a>
                        <form method="post" action="/Admin/Country/Delete" style="display:inline;">
                            <input type="hidden" name="id" value="@country.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a class="btn btn-success" href="/Admin/Country/Create">Yeni Ülke Ekle</a>
