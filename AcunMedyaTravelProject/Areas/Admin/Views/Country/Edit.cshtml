@model AcunMedyaTravelProject.Entities.Country

@{
    ViewData["Title"] = "Ülkeyi Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Ülkeyi Düzenle</h1>

<form action="/Admin/Country/Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Name">Ülke Adı</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="ImageUrl">Kapak Görseli URL</label>
        <input type="text" id="ImageUrl" name="ImageUrl" class="form-control" value="@Model.ImageUrl" required />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="/Admin/Country/Index" class="btn btn-secondary">Geri Dön</a>
</form>
