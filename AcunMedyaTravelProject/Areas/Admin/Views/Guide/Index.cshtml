@model List<AcunMedyaTravelProject.Entities.Guide>

@{
    ViewData["Title"] = "Rehber Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Rehber Listesi</h2>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Başlık</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var guide in Model)
        {
            <tr>
                <td>@guide.Name</td>
                <td>@guide.Title</td>
                <td>
                    <img src="@guide.ImageUrl" alt="@guide.Name" style="width: 100px; height: auto;" />
                </td>
                <td>
                    <a href="/Admin/Guide/Edit/@guide.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@guide.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Admin/Guide/Create" class="btn btn-success">Yeni Rehber Ekle</a>