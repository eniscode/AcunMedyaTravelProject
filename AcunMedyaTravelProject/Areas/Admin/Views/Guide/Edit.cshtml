@model AcunMedyaTravelProject.Entities.Guide

@{
    ViewData["Title"] = "Rehber Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Rehber Düzenle</h1>

<form action="/Admin/Guide/Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Name">Rehber Adı</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="Title">Başlık</label>
        <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" required />
    </div>

    <div class="form-group">
        <label for="ImageUrl">Resim URL</label>
        <input type="text" id="ImageUrl" name="ImageUrl" class="form-control" value="@Model.ImageUrl" required />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="/Admin/Guide/Index" class="btn btn-secondary">Geri Dön</a>
</form>
