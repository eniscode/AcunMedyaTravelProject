@model AcunMedyaTravelProject.Entities.About

@{
    ViewData["Title"] = "Hakkımızda Bilgisini Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 class="mb-4 text-center">Hakkımızda Bilgisini Düzenle</h1>

<form asp-action="Edit" asp-controller="About" asp-area="Admin" method="post">
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="form-group mb-3">
        <label for="Name" class="form-label">Başlık</label>
        <input type="text" asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label for="ImageUrl" class="form-label">Resim URL</label>
        <input type="text" asp-for="ImageUrl" class="form-control" required />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a href="/Admin/About/Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</form>


